<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <!-- BUILDINGS -->
    <servlet>
        <servlet-name>AddBuilding</servlet-name>
        <servlet-class>view.Buildings</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddBuilding</servlet-name>
        <url-pattern>/addbuilding</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteBuilding</servlet-name>
        <servlet-class>view.Buildings</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteBuilding</servlet-name>
        <url-pattern>/deletebuilding</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListBuilding</servlet-name>
        <servlet-class>view.Buildings</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListBuilding</servlet-name>
        <url-pattern>/listbuilding</url-pattern>
    </servlet-mapping>
    
    <!-- USERS -->
    <servlet>
        <servlet-name>ListUsers</servlet-name>
        <servlet-class>view.Users</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListUsers</servlet-name>
        <url-pattern>/listusers</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddUser</servlet-name>
        <servlet-class>view.Users</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddUser</servlet-name>
        <url-pattern>/adduser</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteUser</servlet-name>
        <servlet-class>view.Users</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteUser</servlet-name>
        <url-pattern>/deleteuser</url-pattern>
    </servlet-mapping>
    
    <!-- REPORTS -->
    <servlet>
        <servlet-name>ListReports</servlet-name>
        <servlet-class>view.Reports</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListReports</servlet-name>
        <url-pattern>/listreports</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddReport</servlet-name>
        <servlet-class>view.Reports</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddReport</servlet-name>
        <url-pattern>/addreport</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteReport</servlet-name>
        <servlet-class>view.Reports</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteReport</servlet-name>
        <url-pattern>/deletereport</url-pattern>
    </servlet-mapping>
</web-app>
